<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:layout_marginStart="-2dp"
        android:layout_marginTop="-2dp"
        android:layout_marginEnd="-2dp"
        android:layout_marginBottom="-2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:text="" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/logo" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Registro"
                android:textColor="#366C4A"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:text="" />

            <EditText
                android:id="@+id/nombreUsuario"
                android:layout_width="333dp"
                android:layout_height="60dp"
                android:ems="10"
                android:inputType="text"
                android:text="Ingrese nombre"
                android:textColor="#366C4A" />

            <EditText
                android:id="@+id/apellidoUsuario"
                android:layout_width="333dp"
                android:layout_height="60dp"
                android:ems="10"
                android:inputType="text"
                android:text="Ingrese apellidos"
                android:textColor="#366C4A" />

            <EditText
                android:id="@+id/fecha"
                android:layout_width="333dp"
                android:layout_height="60dp"
                android:editable="true"
                android:ems="10"
                android:focusable="false"
                android:inputType="text"
                android:text="Ingrese fecha de nacimiento"
                android:textColor="#366C4A" />

            <EditText
                android:id="@+id/correo"
                android:layout_width="333dp"
                android:layout_height="60dp"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:text="Ingrese correo electronico"
                android:textColor="#366C4A" />

            <EditText
                android:id="@+id/confirmeCorreo"
                android:layout_width="333dp"
                android:layout_height="60dp"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:text="Confirme correo electronico"
                android:textColor="#366C4A" />

            <EditText
                android:id="@+id/contrasena"
                android:layout_width="333dp"
                android:layout_height="60dp"
                android:ems="10"
                android:hint="Ingrese contraseña"
                android:inputType="textPassword"
                android:textColor="#366C4A" />

            <EditText
                android:id="@+id/confirmarContrasena"
                android:layout_width="333dp"
                android:layout_height="60dp"
                android:ems="10"
                android:hint="Ingrese contraseña"
                android:inputType="textPassword"
                android:textColor="#366C4A" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:text="" />

            <CheckBox
                android:id="@+id/terminod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Acepto terminos y condiciones" />

            <Button
                android:id="@+id/registroBoton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="#366C4A"
                android:text="Registrarse"
                android:textColor="@color/white"
                android:textSize="20dp" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>